{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "copy file",
            "command": "cp",
            "args": [
                "${file}",
                "~/Docker/kyopuro/builder/src/bin/${fileBasename}"
            ],
        },
        {
            "type": "shell",
            "label": "build rust file",
            "command": "cargo",
            "args": [
                "run",
                "--bin",
                "${fileBasenameNoExtension}",
            ],
            "options": {
                "cwd": "builder",
            },
            "problemMatcher": [],
        },
        {
            "type": "shell",
            "label": "remove bin and target",
            "command": "rm",
            "args": [
                "-rf",
                "~/Docker/kyopuro/builder/src/bin/*",
                "~/Docker/kyopuro/builder/target",
            ],
        },
        {
            "label": "Task Sequence",
            "dependsOrder": "sequence",
            "dependsOn": [
                "copy file",
                "build rust file",
                "remove bin and target",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
}
