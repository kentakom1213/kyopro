{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "copy file",
            "command": "cp",
            "args": [
                "${file}",
                "~/Docker/kyopro/builder/src/main.rs"
            ],
        },
        {
            "type": "shell",
            "label": "lint and build file",
            "command": "cargo clippy && cargo build",
            "options": {
                "cwd": "builder",
            },
            "problemMatcher": [],
        },
        {
            "label": "Task Sequence",
            "dependsOrder": "sequence",
            "dependsOn": [
                "copy file",
                "lint and build file",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
}
